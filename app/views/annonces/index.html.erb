<header>
    <div class="container">
        <div class="intro-text">
            <h2 class="intro-lead-in">Cycle à propulsion humaine</h2>
            <h1 class="intro-heading">Vélocipèdes</h1>
<!--             <a href="#destinations" class="page-scroll btn btn-xl">Voir les destinations</a>
 -->            <a href="#annonces" class="btn btn-circle page-scroll text-center">
                <i class="fa fa-angle-double-down"></i>
            </a>
        </div>
    </div>
</header>

<section id="annonces">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
          <h2 class="section-heading">Les Vélocipèdes</h2>
          <h3 class="section-subheading text-muted">Faites votre choix</h3>
      </div>
    </div>
    <div class="row">
      <% @annonces.each do |annonce| %>
        <%= link_to annonce_path(annonce) do %>
          <div class="col-md-4 card">
            <div class="photo">
              <%= image_tag(image_path(annonce.photo), class: 'img-responsive') %>
            </div>
            <div class="description">
              <div class="row">
                <div class="col-md-12">
                  <h4 class="title"><%= annonce.title %></h4>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <p class="locality"><%= annonce.locality %></p>
                </div>
                <div class="col-md-6">
                  <p class="price"><%= annonce.price %> €</p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
