<section id="search">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 text-center">
      </div>
    </div>
  </div>
</section>


<section id="annonces">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
          <h2 class="section-heading">Les Vélocipèdes</h2>
          <h3 class="section-subheading text-muted">Faites votre choix</h3>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3 col-md-offset-4">
        <%= simple_form_for :search, url: annonces_path, method: :get  do |form| %>
            <%= form.input :query_address, as: :string, label: false , placeholder: 'Lieu de recherche', input_html: { class: "form-control", id:"user_input_autocomplete_address", value: @search_params[:address] } %>
      </div>
      <div class="col-md-1">
            <%= form.submit "Cycle", class: 'btn btn-submit' %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% if @annonces == [] %>
        <p>Il n'y a pas de vélo disponible dans ces environs</p>
      <% else %>
        <% @annonces.each do |annonce| %>
          <%= link_to annonce_path(annonce) do %>
            <div class="col-md-4 card">
              <div class="photo">
                <%= image_tag("giphy_bike.gif", class: 'img-responsive') %>
              </div>
              <div class="description">
                <div class="row">
                  <div class="col-md-8">
                    <h4 class="title"><%= annonce.title %></h4>
                    <p class="locality"><%= annonce.locality %></p>
                    <p class="locality"><%= annonce.created_at %></p>
                  </div>
                  <div class="col-md-4">
                    <p class="price"><%= annonce.price %> €</p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

      <% end %>
    </div>
  </div>
</section>
