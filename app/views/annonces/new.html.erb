<section id="annonces">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
          <h2 class="section-heading">Nouvelle annonce</h2>
          <h3 class="section-subheading text-muted">Dites nous tout</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= simple_form_for(@annonce) do |f| %>
          <%= f.input :title %>
          <%= f.input :price %>
          <%= f.input :address, input_html: { id: 'user_input_autocomplete_address' }, placeholder: 'Le lieu de de rencontre' %>
          <%= f.input :street_number, input_html: { id: 'street_number' }, as: :hidden %>
          <%= f.input :route, input_html: { id: 'route' }, as: :hidden  %>
          <%= f.input :locality, input_html: { id: 'locality' }, as: :hidden  %>
          <%= f.input :administrative_area_level_1, input_html: { id: 'administrative_area_level_1' }, as: :hidden  %>
          <%= f.input :postal_code, input_html: { id: 'postal_code' }, as: :hidden  %>
          <%= f.input :country, as: :string, input_html: { id: 'country' }, as: :hidden  %>
          <%= f.input :description, as: :text, placeholder: 'Quelle est son histoire ?'%>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit class: 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</section>
