<section id="annonces">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
          <h2 class="section-heading">Nouvelle annonce</h2>
          <h3 class="section-subheading text-muted">Expliquez nous</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= simple_form_for(@annonce) do |f| %>
          <%= f.input :title %>
          <%= f.input :price %>
          <%= f.input :locality %>
          <%= f.input :description %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</section>
